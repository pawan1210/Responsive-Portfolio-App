<%include ./partials/header %>


<div class="container">
    <form class="form-horizontal" action="/checkout" method="POST">
        <div class="form-group form-group-sm">
            <label for="address" class="col-xs-2 control-label">Address</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="address" name="address" placeholder="address" required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="email" class="col-xs-2 control-label">Email Id</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email Id" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class=" btn btn-default btn-md check">Submit</button>
                <a class="btn btn-default btn-md check" href="/">Go Back</a>
            </div>
        </div>
    </form>
</div>
<%include ./partials/footer %>