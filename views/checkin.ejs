<%include ./partials/header %>
<div class="container">
    <form class="form-horizontal" action="/checkin" method="POST">
        <div class="form-group form-group-sm">
            <label for="name" class="col-xs-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="visitor[name]" placeholder="Name" required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="email" class="col-sm-2 control-label">Email Id</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" name="visitor[email]" placeholder="Email Id"
                    required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="phone" class="col-sm-2 control-label">Phone</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" id="phone" pattern="[1-9]{1}[0-9]{9}" name="visitor[phone]"
                    placeholder="Phone" required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="hostname" class="col-sm-2 control-label">Host Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control input-sm" id="hostname" name="visitor[hostName]"
                    placeholder="Host Name" required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="hostemail" class="col-xs-2 control-label">Email Id</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="hostemail" name="visitor[hostEmail]" placeholder="Email Id"
                    required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="hostphone" class="col-sm-2 control-label">Phone</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" id="hostphone" pattern="[1-9]{1}[0-9]{9}"
                    name="visitor[hostPhone]" placeholder="Phone" required>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class=" col-sm-offset-2 col-sm-10">
                <button class=" btn btn-default btn-md check">Submit</button>
                <a class="btn btn-default btn-md check" href="/">Go Back</a>

            </div>
        </div>


</div>

</form>

</div>


<%include ./partials/footer%>